    "compilerOptions": {
        "outDir": "./build/esm",
        "allowJs": true,
        "target": "ES2015",
        "moduleResolution": "node",
        "module": "ES2020",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": [
        "./src/**/*"
    ]
}